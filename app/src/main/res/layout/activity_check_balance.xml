<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".checkBalance_activity">


    <ImageView
        android:id="@+id/ebankImage"
        android:layout_width="228dp"
        android:layout_height="70dp"
        android:background="@drawable/ebank">
    </ImageView>

    <TextView
        android:id="@+id/customerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ebankImage"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:fontFamily="sans-serif"
        android:text="Daniel Wambua"
        android:textColor="@color/black"
        android:textSize="26dp"
        android:textStyle="bold">
    </TextView>

    <TextView
        android:id="@+id/CheckBl_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHECK BALANCE"
        android:fontFamily="sans-serif"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_below="@+id/customerName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp">
    </TextView>

    <TextView
        android:id="@+id/pin_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PIN (3 TIMES REMAINING)"
        android:fontFamily="sans-serif"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:layout_below="@+id/CheckBl_Text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp">
    </TextView>

    <EditText
        android:id="@+id/pin_checkBL"
        android:layout_below="@+id/pin_Text"
        android:layout_centerHorizontal="true"
        android:layout_margin="18dp"
        android:background="#9ABB86FC"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="PIN"
        android:inputType="numberPassword"
        android:textAlignment="center"
        android:textColor="@color/black">
    </EditText>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/send_check_balance"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/pin_checkBL"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/btn_bg"
        android:text="SEND"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"></com.google.android.material.button.MaterialButton>


</RelativeLayout>